<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/list_item"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_userName"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/address_phone"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/address_fullAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/address_edit_message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/edit_address" />

        <Button
            android:id="@+id/address_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/edit_delete" />

    </LinearLayout>

</LinearLayout>